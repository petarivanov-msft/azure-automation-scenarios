# ============================================================================
# Backend Configuration Example for Remote State (Optional)
# ============================================================================
# Copy this file to your scenario directory as 'backend.tf' and customize it.
# This enables remote state storage in Azure for team collaboration.
# ============================================================================

terraform {
  backend "azurerm" {
    resource_group_name  = "rg-terraform-state"
    storage_account_name = "tfstate<unique-id>"
    container_name       = "tfstate"
    key                  = "scenario-name.terraform.tfstate"
  }
}

